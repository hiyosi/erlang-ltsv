{cover_enabled, true}.
{edoc_opts, [{preprocess, true}]}.
{xref_checks, [fail_on_warning, undefined_function_calls]}.
{clean_files, [".test/*.beam", ".eunit/*", "ebin/*.beam"]}.
{erl_opts, [warnings_as_errors,
            warn_export_all,
            warn_unused_import,
            warn_untyped_record]}.
{validate_app_modules, true}.
{sub_dirs, ["rel"]}.
{eunit_opts, [verbose]}.
